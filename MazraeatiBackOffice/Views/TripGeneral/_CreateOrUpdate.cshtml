@model TripModel
<style>
    .form-group {
        font-size: 13px;
    }
</style>
@Html.HiddenFor(a => a.Id)
@Html.HiddenFor(a => a.IssueDate)
@Html.HiddenFor(a => a.Countries)
@Html.HiddenFor(a => a.Cities)
@Html.HiddenFor(a => a.TripSections)
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>معالجة </strong> السجل</h2>
                    <ul class="header-dropdown">
                    </ul>
                </div>
                <div class="body">
                    <div class="row clearfix">

                        <div class="col-sm-12">
                            <h5 style="text-decoration:underline">معلومات الدولة ونوع النشاط</h5>
                        </div>

                        <div class="col-sm-6">
                            @Html.DisplayNameFor(a => a.CountryDesc) <span style="color:red">*</span>
                            <select class="form-control" name="CountryId">
                                <option selected="selected" disabled="disabled">--الرجاء اختيار الدوله--</option>
                                @foreach (var item in Model.Countries)
                                {
                                    <option selected="@(item.Id  == Model.CountryId)" value="@item.Id">@item.DescAr</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(a => a.CountryId, "", new { @style = "color:red;font-size:10px" })
                        </div>

                        <div class="col-sm-6">
                            @Html.DisplayNameFor(a => a.CityDesc) <span style="color:red">*</span>
                            <select class="form-control" name="CityId">
                                <option selected="selected" disabled="disabled">--الرجاء اختيار المدينة--</option>
                                @foreach (var item in Model.Cities)
                                {
                                    <option selected="@(item.Id  == Model.CityId)" value="@item.Id">@item.DescAr</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(a => a.CityId, "", new { @style = "color:red;font-size:10px" })
                        </div>

                        <div class="col-sm-6">
                            @Html.DisplayNameFor(a => a.TypeId) <span style="color:red">*</span>
                            <select class="form-control" name="TypeId">
                                <option selected="selected" disabled="disabled">--الرجاء اختيار نوع الخدمة--</option>
                                @foreach (var item in Model.TripSections)
                                {
                                    <option selected="@(item.Id  == Model.TypeId)" value="@item.Id">@item.Title</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(a => a.TypeId, "", new { @style = "color:red;font-size:10px" })
                        </div>


                        <div class="col-sm-6">
                            @Html.DisplayNameFor(a => a.ProfileDesc)
                            <select class="form-control" name="ProfileId" style="max-height: 40px;overflow-y: scroll;">
                                <option selected="selected" disabled="disabled">--الرجاء اختيار نوع الشركة--</option>
                                @foreach (var item in Model.TripProfiles)
                                {
                                    <option selected="@(item.Id == Model.ProfileId)" value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>


                        <div class="col-sm-12" style="margin-bottom:20px">
                            &nbsp;
                        </div>

                        <div class="col-sm-12">
                            <h5 style="text-decoration:underline">معلومات عن النشاط</h5>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.Name) <span style="color:red">*</span>
                                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                                @Html.ValidationMessageFor(a => a.Name, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

                        @*<div class="col-sm-6">
            <div class="form-group">
                @Html.DisplayNameFor(a => a.Duration)
                @Html.TextBoxFor(a => a.Duration, new { @class = "form-control", @autocomplete = "off", @maxlength = 50 })
            </div>
        </div>*@

                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.Description) <span style="color:red">*</span>
                                @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @autocomplete = "off", @maxlength = 5000 })
                                @Html.ValidationMessageFor(a => a.Description, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.TelephoneNumber)
                                @Html.TextBoxFor(a => a.TelephoneNumber, new { @class = "form-control", @autocomplete = "off", @placeholder = "06xxxxx", @maxlength = 7 })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.MobileNumber)  <span style="color:red">*</span>
                                @Html.TextBoxFor(a => a.MobileNumber, new { @class = "form-control", @autocomplete = "off", @placeholder = "962xxxxxxxxx", @maxlength = 12 })
                                @Html.ValidationMessageFor(a => a.MobileNumber, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

