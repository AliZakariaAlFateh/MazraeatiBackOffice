@model CountryModel
<style>
    .form-group {
        font-size: 13px;
    }
</style>
@Html.HiddenFor(a => a.Id)
@Html.HiddenFor(a => a.ImageUrl)
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>معالجة </strong> السجل</h2>
                    <ul class="header-dropdown">
                    </ul>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group" style="@(Model.Id > 0 ? "pointer-events:none" :"")">
                                @Html.DisplayNameFor(a => a.Code)
                                @Html.TextBoxFor(a => a.Code, new { @class = "form-control" })
                                @Html.ValidationMessageFor(a => a.Code, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.DescAr)
                                @Html.TextBoxFor(a => a.DescAr, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.DescAr, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.DescEn)
                                @Html.TextBoxFor(a => a.DescEn, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(a => a.DescEn, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>


                        <div class="col-sm-6 card-title">
                            <fieldset class="form-group">
                                <label>@Html.DisplayNameFor(a => a.ImageUrl) *</label>
                                <div class="">
                                    <input type="file" name="formFile" style="margin-top:1px" id="formFile">
                                    <label class="" for="inputGroupFile01"></label>
                                </div>
                            </fieldset>
                        </div>



                        @if (!string.IsNullOrEmpty(Model.ImageUrl) && Model.Id > 0)
                        {
                            <div class="col-sm-2 card-title">
                                <fieldset class="form-group">
                                    <label>عرض الصورة</label>
                                    <fieldset class="form-group position-relative has-icon-left">
                                        <div class="form-control-position" style="width: 100px;">
                                            <a href="@Url.Content("~/images/")@Model.ImageUrl" style="color:black" target="_blank"><i class="zmdi zmdi-eye"></i></a>
                                        </div>
                                    </fieldset>
                                </fieldset>
                            </div>
                        }

                        <div class="col-sm-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.Active)
                                <br />
                                @Html.CheckBoxFor(a => a.Active, new { @class = "form-control", @style = "margin-top: 10px;" })
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-round">حفظ</button>
                            <button type="button" onclick="window.location.href='@Url.Content("~/Country/index/")'" class="btn btn-default btn-round btn-simple">رجوع</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
