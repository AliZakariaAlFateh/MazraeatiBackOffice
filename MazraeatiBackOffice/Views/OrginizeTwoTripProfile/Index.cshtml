@model IEnumerable<TripProfileModel>
<div class="col-md-12">
    <div class="card patients-list">
        <div class="header">
            <h2><strong>قائمة</strong> منظمي الرحلات</h2>
            <ul class="header-dropdown">
            </ul>
        </div>
        <div class="body">
            <!-- Nav tabs -->
            @Html.Partial("_search")
            <!-- Tab panes -->
            <div class="tab-content m-t-10">
                <div class="tab-pane table-responsive active" id="All">
                    <table class="table m-b-0 table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(a => a.CountryDesc)</th>
                                <th>@Html.DisplayNameFor(a => a.TypeId)</th>
                                <th>@Html.DisplayNameFor(a => a.Name)</th>
                                <th>@Html.DisplayNameFor(a => a.Description)</th>
                                <th>@Html.DisplayNameFor(a => a.TelephoneNumber)</th>
                                <th>@Html.DisplayNameFor(a => a.MobileNumber)</th>
                                <th>@Html.DisplayNameFor(a => a.ImageUrl)</th>
                                <th>@Html.DisplayNameFor(a => a.Active)</th>
                                <th>تفاصيل</th>
                                <th>الانشطة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CountryDesc</td>
                                <td> منظمي الرحلات</td>
                                <td>@item.Name</td>
                                <td>@(item.Description.Length > 40 ? (item.Description.Substring(0,39) +  "....") : item.Description)</td>
                                <td>@item.TelephoneNumber</td>
                                <td>@item.MobileNumber</td>
                                <td><a href="@Url.Content("~/images/")@item.ImageUrl" style="color:black" target="_blank"><i class="zmdi zmdi-eye"></i></a></td>
                                <td>@(item.Active == true ? "فعال" : "غير فعال" )</td>
                                <td><a href="@Url.Content("~/OrginizeTwoTripProfile/Edit/")@item.Id" style="height: 25px;" class="btn btn-primary btn-round"><i class="zmdi zmdi-edit" style="color: white;margin-top: -10px;"></i></a></td>
                                <td><a href="@Url.Content("~/OrginizeTwoTripProfile/TripIndex/")@item.Id" style="height: 25px;" class="btn btn-primary btn-round"><i class="zmdi zmdi-edit" style="color: white;margin-top: -10px;"></i></a></td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>