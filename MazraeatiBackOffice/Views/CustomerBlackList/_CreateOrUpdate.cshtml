@model CustomerBlackListModel
<style>
    .form-group {
        font-size: 13px;
    }

    .textboxWidth {
        width: 120px;
    }
</style>
@Html.HiddenFor(a => a.Id)
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>معالجة </strong> السجل</h2>
                    <ul class="header-dropdown">
                    </ul>
                </div>
                <div class="body">
                    <div class="row clearfix">

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.CustMobileNum)
                                @Html.TextBoxFor(a => a.CustMobileNum, new { @class = "form-control", @autocomplete = "off", @placeholder = "962xxxxxxxxx", @maxlength = 12 })
                                @Html.ValidationMessageFor(a => a.CustMobileNum, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.CustName)
                                @Html.TextBoxFor(a => a.CustName, new { @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                                @Html.ValidationMessageFor(a => a.CustName, "", new { @style = "color:red;font-size:10px" })
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.Reason)
                                @Html.TextAreaFor(a => a.Reason, new { @class = "form-control", @autocomplete = "off", @maxlength = 250 })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl) && Model.Id > 0)
                            {
                                <div class="col-sm-2 card-title">
                                    <fieldset class="form-group">
                                        <label>عرض الصورة</label>
                                        <fieldset class="form-group position-relative has-icon-left">
                                            <div class="form-control-position" style="width: 100px;">
                                                <a href="@Url.Content("~/images/")@Model.ImageUrl" style="color:black" target="_blank"><i class="zmdi zmdi-eye"></i></a>
                                            </div>
                                        </fieldset>
                                    </fieldset>
                                </div>
                            }

                            <div class="col-sm-3 card-title">
                                <fieldset class="form-group">
                                    <label>@Html.DisplayNameFor(a => a.ImageUrl) *</label>
                                    <div class="">
                                        <input type="file" name="formFile" style="margin-top:1px" id="formFile">
                                        <label class="" for="inputGroupFile01"></label>
                                    </div>
                                </fieldset>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.DisplayNameFor(a => a.IsApprove)
                                <br />
                                @Html.CheckBoxFor(a => a.IsApprove, new { @class = "form-control", @style = "margin-top: 10px;" })
                            </div>
                        </div>

                        <div class="col-sm-12" style="margin-bottom:20px">
                            &nbsp;
                        </div>

                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-round">حفظ</button>
                            <button type="button" onclick="window.location.href='@Url.Content("~/CustomerBlackList/index")'" class="btn btn-default btn-round btn-simple">رجوع</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
